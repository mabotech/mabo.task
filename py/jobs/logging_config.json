{
    "handlers": {
        "info": {
            "backupCount": 7,
            "level": "INFO",
            "filename": "info.log",
            "formatter": "verbose",
            "class": "logging.handlers.RotatingFileHandler",
            "maxBytes": 10240000
        },
        "console": {
            "formatter": "verbose",
            "class": "logging.StreamHandler",
            "level": "DEBUG"
        },
        "warning": {
            "backupCount": 7,
            "level": "WARNING",
            "filename": "warning.log",
            "formatter": "verbose",
            "class": "logging.handlers.RotatingFileHandler",
            "maxBytes": 10240000
        },
        "error": {
            "backupCount": 7,
            "level": "ERROR",
            "filename": "error.log",
            "formatter": "verbose",
            "class": "logging.handlers.RotatingFileHandler",
            "maxBytes": 10240000
        },
        "debug": {
            "backupCount": 7,
            "level": "DEBUG",
            "filename": "debug.log",
            "formatter": "verbose",
            "class": "logging.handlers.RotatingFileHandler",
            "maxBytes": 10240000
        },
        "performance": {
            "backupCount": 7,
            "level": "DEBUG",
            "filename": "performance.log",
            "formatter": "performance",
            "class": "logging.handlers.RotatingFileHandler",
            "maxBytes": 10240000
        }
    },
    "loggers": {
        "performance": {
            "level": "DEBUG",
            "propagate": true,
            "handlers": ["console", "performance"]
        },
        "": {
            "level": "DEBUG",
            "propagate": true,
            "handlers": ["console", "info", "warning", "error", "debug"]
        }
    },
    "version": 1,
    "formatters": {
        "simple": {
            "format": "%(levelname)s %(message)s"
        },
        "performance": {
            "format": "%(asctime)s [%(process)d] [%(levelname)s] %(message)s"
        },
        "verbose": {
            "format": "%(asctime)s [%(process)d][%(levelname)s] %(module)s,%(funcName)s,%(lineno)s:%(message)s"
        }
    }
}
